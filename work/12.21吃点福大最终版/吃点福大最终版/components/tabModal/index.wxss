/* components/tabModal/index.wxss */
.tabModal{
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.199);
}
.modal_content{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 80%;
  height: 70%;
  background: #fff;
  border-radius: 15px;
}
.content_box{
  position: relative;
  width: 100%;
  height: 100%;
}
.modal_header{
  display: flex;
  justify-content: space-between;
  padding: 20px;
  padding-bottom: 10px;
  border: 1px solid #ccc;
}
.close_icon{
  width: 30px;
  height: 30px;
}
image{
  width: 100%;
  height: 100%;
}
.content{
  display: flex;
  flex-wrap: wrap;
}
.content .item{
  border: 1px solid #ccc;
  margin: 5px;
  width: 30%;
  height: 5vh;
  line-height: 5vh;
  text-align: center;
  border-radius: 5px;
  background-color: rgb(233, 176, 128);
    color: rgb(70, 69, 69);
    border: 1px solid rgb(233, 176, 128);
}
.footer_box{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.btn_box{
  display: flex;
  border-top: 1px solid #ccc;
}
.btn_box > view{
  flex:1;
  text-align: center;
  font-size: 20px;
  padding: 10px 0;
}
.addbtn{
  border-right: 1px solid #ccc;
}