/**app.wxss**/
@import "demo/colorui/main.wxss";
@import "demo/colorui/icon.wxss";
@import "demo/colorui/animation.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.topcontainer{
  margin-top: 20px;
  height: 42px;

  background-color: #E9B080;
  font-size: 20px;
  text-align:center;

  color: black;
}
.box1{   /*整个结果盒子*/
  display: -webkit-flex;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 92%;
  margin: 0 auto;
  margin-top: 30rpx;
  padding-bottom: 16rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 10px;
}
.box1-list{   /*结果文本图片*/
  width: 100%;
  height: 250rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.box1-list-photo{ /*单条结果照片*/
  width: 30%;
  height: 70%;
  float: left;
  margin-top: 24rpx;
  margin-left: 24rpx;
}
.box1-list-photo image{
  width: 100%;
  height: 100%;
}
.box1-list-text{    /*单条结果文字部分*/
  margin-left: 26rpx;
  float: left;
  width: 49%;
  height: 84%;
}
/**结果盒子**/
.box1-list-text-tit1{  /*菜名*/
  flex: 0 0 auto;
  white-space: normal;   /*自动换行*/
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 25rpx;
  height: 54rpx;
  width: 100%;
  line-height: 50rpx;
}
.box1-list-text-tit2{  /*店名*/
  flex: 0 0 auto;
  white-space: normal;
  width: 100%;
  height:40rpx ;
  font-size: 24rpx;
  color: rgb(136, 136, 136);
}
.box1-list-text-tit3{ /*地址*/
  flex: 0 0 auto;
  white-space: normal;
  width: 100%;
  height:50rpx ;
  font-size: 24rpx;
  color: rgb(136, 136, 136);
}
.box1-list-other{ /*评分收藏取消*/
  float: right;
  float: inline-start;

  width:13%;
}
.box1-list-other-tit1{  /*评分*/
  white-space: normal;
  margin-left: 16rpx;
  width: 100%;
  height:40rpx ;
  font-size: 32rpx;
  color: rgb(222, 143, 39);
}
.box1-feature{ /*特点*/
  float: left;
  width: 100%;
  margin-left: 42rpx;
  margin-top: 8rpx;
  height: 50rpx;
}
.box1-feature-btn{ /*特点按钮*/
  width: 88rpx;
  height:44rpx;
  border:1px solid  rgb(222, 143, 39);
  background-color: rgb(222, 143, 39);
  font-size: 25rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height:44rpx;
  float: left;
  margin-right: 40rpx;
  color: rgb(222, 143, 39);
  background-color:white;
}

