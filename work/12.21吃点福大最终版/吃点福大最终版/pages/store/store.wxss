/* pages/restaurant/restaurant.wxss */
.card-container{
  display: flex;
  flex-direction: row;
  width: 710rpx;
  height: 300rpx;
  margin: 10rpx 20rpx;
  border: 1px solid #464646;
}
.cards{
  display: flex;
  flex-direction: column;
  width: 410rpx;
  height: 300rpx;
  align-items: flex-start;
}
.card{
  height: 80rpx;
  width:auto;
  overflow: hidden;
  margin: 20rpx 0 0 20rpx;
}
.txtaddress{
  line-height: 80rpx;
}
.txtname{
  font-size: 40rpx;
  line-height: 110rpx;
}
.txtaddres{
  font-size: 30rpx;
  overflow-wrap: normal;
}
.card-pic{
  width: 300rpx;
  height: 300rpx;
}
.imgcard{
  width: 295rpx;
  height: 290rpx;
  margin: 5rpx 5rpx 5rpx 0;
}
.restaurantContainer{
  width: 710rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  border-top: solid 1px #464646;
  margin: 20rpx 20rpx 0;
  z-index: -1;
}
.dishContainer{
  width: 100%;
  height: 200rpx;
  border-bottom:solid 1px #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.dish{
  width: 65%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.photoContainer{
  width: 210rpx;
  height: 200rpx;
  padding: 5rpx 0;
}
.dishPhoto{
  width: 210rpx;
  height: 190rpx;
}
.dishName{
  height: 80rpx;
  margin-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
}
.txtName{
  line-height: 80rpx;
}
.dishPrice{
  height: 60rpx;
  margin-left: 20rpx;
}
.txtprice{
  line-height: 60rpx;
}
.grade{
  width: 35%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.txtgrade{
  line-height: 200rpx;
  font-size: 15px;
}
.socre{
width: 100%;
height: 60rpx;
margin-left: 20rpx;
}
.txtsocre{
  line-height: 60rpx;
}

