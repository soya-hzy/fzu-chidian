
.user_text{
  font-size: 48rpx;
  color: #fff;
  background: #eeb085;
  border: 1px solid #ccc;
  margin-bottom: 20rpx;
}
.user_info{
  display: flex;
  padding-bottom: 28rpx;
  border-bottom: 1px solid #ccc;
}
.user_info .active{
  width: 200rpx;
  height: 200rpx;
  margin: 0 60rpx;
  border-radius: 50%;
  overflow: hidden;

}
.user_info .active > image{
  width: 100%;
  height: 100%;
}
.user_info_details{
  flex: 1;
  padding-right: 40rpx;
}
.user_name{
  font-size: 50rpx;
}
.user_details{
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 10%;
}
.function_box{
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.function_box .items{
  /* flex: 1; */
  /* width: 200rpx; */
  padding: 20rpx;
}
.items{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.items .icon{
  width: 160rpx;
  height: 160rpx;
  padding: 40rpx;
  text-align: center;
  border: 2rpx solid #ccc;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}
.items .icon image{
  width: 100%;
  height: 100%;
}
.item_name{
  text-align: center;
}

.tabs_line{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx;

  border: 2rpx solid #ccc;
}
